#include<stdio.h>
int main()
{
    int N;int x[100][100];int T;

while(1){
    scanf("%d",&N);
if(N!=0 && N<=15){
    int i,j;
   int mal=1;int count=1;

    for(i=0;i<N;i++){
        for(j=0;j<N;j++){
                x[i][j]=mal;
                mal=mal*2;

        }
        mal=count*2;
        count*=2;


    }
    ///finding largest number.
    int k=0;
    for(i=0;i<N;i++){
        for(j=0;j<N;j++){
                if(x[i][j]>k){
                    k=x[i][j];
                }
        }}

///counting size
   int T=0;
    while(k!=0){

        k/=10;
        T++;
            }



int u;int y;int c;int f;

for(i=0;i<N;i++){
    for(j=0;j<N;j++)
       { y=0;
          u=x[i][j];
            while(u!=0){

             u/=10;
            y++;
            }
        c=T-y;

        for(f=0;f<c;f++){
            printf(" ");
        }
        if(j!=(N-1)){
        printf("%d ",x[i][j]);
        }
        else
            printf("%d",x[i][j]);


}

printf("\n");

}
printf("\n");

}
else

return 0;
}
}
